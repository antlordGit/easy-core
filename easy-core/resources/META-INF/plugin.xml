<idea-plugin>
  <id>com.your.antlord.easy-core.plugin.id</id>
  <name>EasyCore</name>
  <version>1.0</version>
  <vendor email="czwilxz@qq.com" url="http://www.yourcompany.com">Antlrod</vendor>

  <description><![CDATA[
